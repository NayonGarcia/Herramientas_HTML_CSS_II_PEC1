
{
  "extends": ["stylelint-config-recommended-scss", "stylelint-config-property-sort-order-smacss", "stylelint-config-recess-order"],
  "plugins": ["stylelint-scss"],
  "rules": {
    "block-no-empty": true,
    "selector-max-id": 0,
    "selector-class-pattern": "^[a-z0-9\\-]+$",
    "max-nesting-depth": 3,
    "no-duplicate-selectors": true,
    "color-no-invalid-hex": true,
    "font-family-no-duplicate-names": true,
 }
}

